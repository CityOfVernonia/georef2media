{
  "name": "georeferenced-media",
  "version": "1.0.0",
  "description": "Tools to display media georeferenced with ArcGIS in a web map.",
  "scripts": {
    "build": "tsc",
    "dev": "vite",
    "lint": "eslint . --ext .ts,.tsx",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "test": "npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfVernonia/georeferenced-media.git"
  },
  "author": "COV-GIS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CityOfVernonia/georeferenced-media/issues"
  },
  "homepage": "https://github.com/CityOfVernonia/georeferenced-media#readme",
  "devDependencies": {
    "@types/js-cookie": "^3.0.2",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.1",
    "sass": "^1.56.2",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "3.0.4"
  },
  "dependencies": {
    "@arcgis/core": "^4.25.5",
    "fast-xml-parser": "^4.0.12"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "package.json",
      "package-lock.json",
      "dev",
      "dist",
      "node_modules/**"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 1
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "auto"
  }
}
